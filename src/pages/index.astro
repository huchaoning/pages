---
import "../styles/global.css";

const UI_DATA = {
  name: "Chao-Ning Hu",
  title: "This is a sample page generated by Gemini",
  links: [
    {
      label: "My resume (PDF version is also available)",
      url: "#",
      primary: false,
    },
    { label: "My notes (Mostly in Chinese)", url: "#", primary: false },
    { label: "Contact me", url: "#", primary: true },
  ],
  socials: [
    { label: "GitHub", url: "#" },
    { label: "Email", url: "#" },
  ],
};

const glassEffect =
  "bg-white/5 backdrop-blur-xl border border-white/10 shadow-2xl";
const animState =
  "transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)]";
---

<html lang="en" class="scroll-smooth bg-black">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{`${UI_DATA.name}'s Homepage`}</title>
  </head>

  <body class="text-white font-sans antialiased">
    <nav
      id="sticky-nav"
      class={`fixed top-0 left-0 right-0 z-50 flex justify-center p-6 opacity-0 -translate-y-full pointer-events-none ${animState}`}
    >
      <div
        class={`flex items-center justify-between w-full max-w-lg px-8 py-3 rounded-3xl ${glassEffect}`}
      >
        <span
          class="font-black text-sm tracking-tight bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent"
        >
          {UI_DATA.name}
        </span>
        <div
          class="flex gap-6 text-[10px] font-bold tracking-widest text-slate-400"
        >
          <button class="hover:text-white transition-colors uppercase"
            >Menu</button
          >
        </div>
      </div>
    </nav>

    <main>
      <section
        class="h-screen w-full flex flex-col items-center justify-center snap-start snap-always relative px-4"
      >
        <div
          id="hero-card"
          class={`p-8 md:p-12 rounded-3xl max-w-lg w-full text-center opacity-0 scale-95 blur-xl ${glassEffect} ${animState} duration-1000`}
        >
          <div
            class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl mx-auto mb-6 rotate-3 hover:rotate-0 transition-transform duration-500 shadow-lg shadow-blue-500/20"
          >
          </div>

          <h1 class="text-4xl font-black mb-2 tracking-tight">
            I'm <span
              class="bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent"
              >{UI_DATA.name}</span
            >
          </h1>
          <p class="text-slate-400 font-medium mb-8">{UI_DATA.title}</p>

          <div class="space-y-3">
            {
              UI_DATA.links.map((link) => (
                <a
                  href={link.url}
                  class={`block w-full py-3 px-6 rounded-xl transition-all hover:translate-x-1 text-sm font-bold text-center 
                ${
                  link.primary
                    ? "bg-blue-600 hover:bg-blue-500 shadow-lg shadow-blue-600/30 mt-6"
                    : "bg-white/10 hover:bg-white/20 border border-white/5"
                }`}
                >
                  {link.label}
                </a>
              ))
            }
          </div>

          <div
            class="mt-8 pt-8 border-t border-white/10 flex justify-center gap-6 text-slate-500 text-sm"
          >
            {
              UI_DATA.socials.map((soc) => (
                <a href={soc.url} class="hover:text-white transition-colors">
                  {soc.label}
                </a>
              ))
            }
          </div>
        </div>

        <div
          id="scroll-indicator"
          class="absolute bottom-10 animate-bounce text-slate-500 text-[10px] tracking-[0.5em]"
        >
          SCROLL
        </div>
      </section>

      <section
        class="h-screen w-full flex items-center justify-center snap-start snap-always"
      >
      </section>
    </main>

    <div class="fixed inset-0 -z-10">
      <img
        src="/nebula.webp"
        alt="Background"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <canvas id="three-body-canvas" class="fixed inset-0 -z-10"></canvas>

    <script>
      import { initScrollEffects } from "../scripts/scroll.js";
      import { initThreeBody } from "../scripts/threeBody.js";

      initScrollEffects();
      initThreeBody("three-body-canvas");
    </script>
  </body>
</html>
