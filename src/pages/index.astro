---
import "../styles/global.css";

const name = "Chao-Ning Hu";
const title = "This is a sample page generated by Gemini";
---

<html lang="en" class="snap-y snap-mandatory scroll-smooth bg-black">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{`${name}'s Homepage`}</title>
  </head>

  <body class="text-white font-sans antialiased">
    <nav
      id="sticky-nav"
      class="fixed top-0 left-0 right-0 z-50 flex justify-center p-6 opacity-0 -translate-y-full pointer-events-none transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)]"
    >
      <div
        class="flex items-center justify-between w-full max-w-lg px-8 py-3 bg-white/5 backdrop-blur-xl border border-white/10 rounded-3xl shadow-2xl"
      >
        <span
          class="font-black text-sm tracking-tight bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent"
          >{name}</span
        >
        <div
          class="flex gap-6 text-[10px] font-bold tracking-widest text-slate-400"
        >
          <button class="hover:text-white transition-colors">MENU</button>
        </div>
      </div>
    </nav>

    <section
      class="h-screen w-full flex flex-col items-center justify-center snap-start snap-always relative px-4"
    >
      <div
        id="hero-card"
        class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 md:p-12 rounded-3xl shadow-2xl max-w-lg w-full text-center transition-all duration-800 ease-[cubic-bezier(0.23,1,0.32,1)] opacity-0 scale-95 blur-xl"
      >
        <div
          class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl mx-auto mb-6 rotate-3 hover:rotate-0 transition-transform duration-500 shadow-lg shadow-blue-500/20"
        >
        </div>

        <h1 class="text-4xl font-black mb-2 tracking-tight">
          I'm <span
            class="bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent"
            >{name}</span
          >
        </h1>
        <p class="text-slate-400 font-medium mb-8">{title}</p>

        <div class="space-y-3">
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-white/10 hover:bg-white/20 border border-white/5 transition-all hover:translate-x-1 text-sm font-bold text-center"
          >
            My resume (PDF version is also available)
          </a>
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-white/10 hover:bg-white/20 border border-white/5 transition-all hover:translate-x-1 text-sm font-bold text-center"
          >
            My notes (Mostly in Chinese)
          </a>
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-blue-600 hover:bg-blue-500 shadow-lg shadow-blue-600/30 transition-all font-bold mt-6 text-center"
          >
            Contact me
          </a>
        </div>

        <div
          class="mt-8 pt-8 border-t border-white/10 flex justify-center gap-6 text-slate-500"
        >
          <span class="hover:text-white cursor-pointer transition-colors"
            >GitHub</span
          >
          <span class="hover:text-white cursor-pointer transition-colors"
            >Email</span
          >
        </div>
      </div>

      <div
        id="scroll-indicator"
        class="absolute bottom-10 animate-bounce text-slate-500 text-[10px] tracking-[0.5em] transition-opacity duration-500"
      >
        SCROLL
      </div>
    </section>

    <section
      class="h-screen w-full flex flex-col items-center justify-center snap-start snap-always"
    >
      <div class="max-w-4xl px-10 text-center">
        <h2
          class="text-7xl font-black opacity-10 tracking-tighter italic select-none"
        >
        </h2>
      </div>
    </section>

    <div class="fixed inset-0 -z-10">
      <img src="/nebula.webp" alt="NASA" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <canvas id="three-body-canvas" class="fixed inset-0 -z-10"></canvas>
    <script>
      import { initScrollEffects } from "../scripts/scroll.js";
      import { initThreeBody } from '../scripts/threeBody.js';
      initScrollEffects();
      initThreeBody('three-body-canvas');
    </script>
  </body>
</html>
