---
import "../styles/global.css";

const name = "Chao-Ning Hu";
const title = "This is a sample page generated by Gemini";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{`${name}'s Homepage`}</title>
  </head>

  <body class="bg-slate-950 text-white font-sans antialiased overflow-hidden">
    <div
      id="background-container"
      class="fixed inset-0 -z-10 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-slate-900 via-slate-950 to-black"
    >
    </div>

    <main
      class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4"
    >
      <div
        class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 md:p-12 rounded-3xl shadow-2xl max-w-lg w-full text-center"
      >
        <div
          class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-2xl mx-auto mb-6 rotate-3 hover:rotate-0 transition-transform duration-500 shadow-lg shadow-blue-500/20"
        >
        </div>

        <h1 class="text-4xl font-black mb-2 tracking-tight">
          I'm <span
            class="bg-gradient-to-r from-blue-400 to-emerald-400 bg-clip-text text-transparent"
            >{name}</span
          >
        </h1>
        <p class="text-slate-400 font-medium mb-8">{title}</p>

        <div class="space-y-3">
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-white/10 hover:bg-white/20 border border-white/5 transition-all hover:translate-x-1 text-sm font-bold"
          >
            My resume (PDF version is also available)
          </a>
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-white/10 hover:bg-white/20 border border-white/5 transition-all hover:translate-x-1 text-sm font-bold"
          >
            My notes (Mostly in Chinese)
          </a>
          <a
            href="#"
            class="block w-full py-3 px-6 rounded-xl bg-blue-600 hover:bg-blue-500 shadow-lg shadow-blue-600/30 transition-all font-bold mt-6"
          >
            Contact me
          </a>
        </div>

        <div
          class="mt-8 pt-8 border-t border-white/10 flex justify-center gap-6 text-slate-500"
        >
          <span class="hover:text-white cursor-pointer transition-colors"
            >GitHub</span
          >
          <span class="hover:text-white cursor-pointer transition-colors"
            >Email</span
          >
        </div>
      </div>
    </main>

    <div id="background-container" class="fixed inset-0 -z-10">
      <img
        src="/nebula.webp"
        alt="NASA Nebula"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
  </body>

<canvas id="three-body-canvas" class="fixed inset-0 -z-10"></canvas>
<script>
  import { initThreeBody } from '../scripts/threeBody.js';
  initThreeBody('three-body-canvas');
</script>

</html>
